FROM golang:1.24-alpine AS builder
WORKDIR /app
ENV GOPROXY=https://goproxy.cn,direct

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o ratings ./ratings/main.go

FROM alpine:3.19
ARG GIT_SHA=unknown
ARG PR_ID=unknown

RUN apk --no-cache add ca-certificates

WORKDIR /app
COPY --from=builder /app/ratings .

ENV GIT_SHA=${GIT_SHA}
ENV PR_ID=${PR_ID}

EXPOSE 9080

CMD ["./main"]
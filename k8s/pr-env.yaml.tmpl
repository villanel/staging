# 1. 部署 PR 版本的 Pod
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${SERVICE_NAME}-pr-${PR_ID}
  namespace: bookinfo
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ${SERVICE_NAME}
      version: pr-${PR_ID}
  template:
    metadata:
      labels:
        app: ${SERVICE_NAME}
        version: pr-${PR_ID}
    spec:
      containers:
      - name: ${SERVICE_NAME}
        image: ${IMAGE_NAME}
        imagePullPolicy: Always
        ports:
        - containerPort: ${SERVICE_PORT}
        env:
        - name: PR_ID
          value: "${PR_ID}"
---
# 2. 为 PR 版本创建专用的 Service
apiVersion: v1
kind: Service
metadata:
  name: ${SERVICE_NAME}-pr-${PR_ID}
  namespace: bookinfo
spec:
  ports:
  - port: ${SERVICE_PORT}
    targetPort: ${SERVICE_PORT}
    protocol: TCP
    name: http
  selector:
    app: ${SERVICE_NAME}
    version: pr-${PR_ID}
  type: ClusterIP
---
# 3. 修正后的路由逻辑：PR 优先，其余回退
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: ${SERVICE_NAME}-pr-${PR_ID}-route
  namespace: bookinfo
spec:
  parentRefs:
  - group: ""
    kind: Service
    name: ${SERVICE_NAME} # 拦截发送给原始 Service 的流量
    port: ${SERVICE_PORT}
  rules:
  # --- 规则 A: 匹配 PR 染色流量 (高优先级) ---
  - matches:
    - headers:
      - type: RegularExpression
        name: "baggage"
        value: ".*pr_id=${PR_ID}.*"
    backendRefs:
    - name: ${SERVICE_NAME}-pr-${PR_ID} # 转发给 PR 专用的 Service
      port: ${SERVICE_PORT}

  # --- 规则 B: 兜底逻辑 (低优先级) ---
  # 不需要任何 matches，代表匹配所有其他流量
  - backendRefs:
    - name: ${SERVICE_NAME}-stable # 转发回原始 Service 本身
      port: ${SERVICE_PORT}
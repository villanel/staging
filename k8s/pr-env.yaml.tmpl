# 1. 部署 PR 版本的 Pod
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${SERVICE_NAME}-pr-${PR_ID}
  namespace: bookinfo
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ${SERVICE_NAME}
      version: pr-${PR_ID}
  template:
    metadata:
      labels:
        app: ${SERVICE_NAME}
        version: pr-${PR_ID}
    spec:
      containers:
      - name: ${SERVICE_NAME}
        image: ${IMAGE_NAME}
        ports:
        - containerPort: ${SERVICE_PORT}
        env:
        - name: PR_ID
          value: "${PR_ID}"
---
# 2. 为该服务嵌入染色路由
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: ${SERVICE_NAME}-pr-${PR_ID}-route
  namespace: bookinfo
spec:
  parentRefs:
  - group: ""
    kind: Service
    name: ${SERVICE_NAME} # 拦截发送给稳定版 Service 的流量
    port: ${SERVICE_PORT}
  rules:
  - matches:
    - headers:
      - type: RegularExpression
        name: "baggage"
        value: ".*pr_id=${PR_ID}.*"
    backendRefs:
    - name: ${SERVICE_NAME}-pr-${PR_ID} # 转发给 PR 版 Deployment
      port: ${SERVICE_PORT}